{
    "name": "paperform-co/vod",
    "description": "vod, zod style validation for PHP",
    "keywords": [
        "v",
        "laravel",
        "validation",
        "zod"
    ],
    "homepage": "https://github.com/paperform-co/vod",
    "license": "MIT",
    "authors": [
        {
            "name": "Dean McPherson",
            "email": "dean@paperform-co.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8",
        "laravel/tinker": "^2",
        "spatie/laravel-package-tools": "^1.16",
        "spatie/laravel-typescript-transformer": "^2"
    },
    "require-dev": {
        "illuminate/support": "^11",
        "larastan/larastan": "^2.9",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "orchestra/testbench": "^9.0.0||^8.22.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "pestphp/pest-plugin-laravel": "^2.3",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Vod\\Vod\\": "src/",
            "Vod\\Vod\\Database\\Factories\\": "database/factories/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Vod\\Vod\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-Vod --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Vod\\Vod\\VodServiceProvider"
            ],
            "aliases": {
                "Vod": "Vod\\Vod\\Facades\\Vod"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
